<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.autoaxis.controllers.CreateAccountController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="background-pane">

    <children>
        <!-- Link to login -->
        <HBox alignment="CENTER_RIGHT" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="Already have an account?" />
                <Hyperlink text="Log in" onAction="#handleSignIn" />
            </children>
        </HBox>

        <!-- Profile icon -->
        <Circle centerX="400.0" centerY="80.0" radius="30.0" />

        <!-- Signup form -->
        <VBox alignment="TOP_CENTER" layoutX="250.0" layoutY="130.0" prefWidth="300.0" spacing="10">
            <children>
                <Text text="Create an account">
                    <font><Font size="24.0" /></font>
                </Text>

                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Enter your email" />

                <Label text="Password:" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" />

                <Button fx:id="signUpButton"
                        text="Sign up"
                        defaultButton="true"
                        onAction="#handleAccountCreation"
                        style="-fx-background-color: #3182ce; -fx-text-fill: white;" />

                <Text wrappingWidth="280"
                      text="By creating an account, you agree to the Terms of use and Privacy Policy."
                      style="-fx-font-size: 11px; -fx-text-alignment: center;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
